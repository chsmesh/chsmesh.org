---
import type { CollectionEntry } from 'astro:content';

interface Props {
  meetup: CollectionEntry<'meetups'>;
  featured?: boolean;
  taxonomy?: {
    statusLabels?: Record<string, string>;
    badgeLabels?: Record<string, string>;
  };
}

const { meetup, featured = false, taxonomy } = Astro.props;
const { title, date, location, description, rsvpLink, address } = meetup.data;

const isPast = date < new Date();
const formattedDate = date.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
const formattedTime = date.toLocaleTimeString('en-US', {
  hour: 'numeric',
  minute: '2-digit',
});

const statusLabel = isPast
  ? taxonomy?.statusLabels?.past ?? 'Past'
  : taxonomy?.statusLabels?.upcoming ?? 'Upcoming';
const featuredLabel = taxonomy?.badgeLabels?.featured ?? 'Featured Event';
---

<article class:list={['card', featured && 'border-primary-300 border-2']}>
  {featured && (
    <div class="bg-primary-600 text-white text-xs font-semibold px-3 py-1 text-center">
      {featuredLabel}
    </div>
  )}
  <div class="card-body">
    <div class="flex items-start justify-between gap-4 mb-3">
      <h3 class="text-xl font-semibold">
        <a href={`/meetups/${meetup.id}`} class="hover:text-primary-600 transition-colors text-neutral-900">
          {title}
        </a>
      </h3>
      {isPast ? (
        <span class="badge-neutral shrink-0">{statusLabel}</span>
      ) : (
        <span class="badge-success shrink-0">{statusLabel}</span>
      )}
    </div>

    <div class="space-y-2 text-sm text-neutral-600 mb-4">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>{formattedDate} at {formattedTime}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>{location}</span>
      </div>
      {address && (
        <div class="flex items-start gap-2 pl-6">
          <span class="text-neutral-500">{address}</span>
        </div>
      )}
    </div>

    <p class="text-neutral-600 line-clamp-2 mb-4">{description}</p>

    <div class="flex items-center gap-3">
      <a href={`/meetups/${meetup.id}`} class="btn-outline btn-sm">
        View Details
      </a>
      {rsvpLink && !isPast && (
        <a href={rsvpLink} target="_blank" rel="noopener noreferrer" class="btn-primary btn-sm">
          RSVP
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      )}
    </div>
  </div>
</article>
