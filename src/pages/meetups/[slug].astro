---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry, render } from 'astro:content';
import { createLabelMap, getTaxonomyData } from '../../utils/taxonomy';

export async function getStaticPaths() {
  const meetups = await getCollection('meetups');
  return meetups.map((meetup) => ({
    params: { slug: meetup.id },
    props: { meetup },
  }));
}

const { meetup } = Astro.props;
const { Content } = await render(meetup);
const { title, date, endDate, location, address, description, rsvpLink, coordinates, maxAttendees, recurring } = meetup.data;
const meetupsDetailEntry = await getEntry('global', 'meetups-detail');
const meetupsDetail = meetupsDetailEntry?.data?.type === 'meetups-detail' ? meetupsDetailEntry.data : undefined;
const taxonomy = await getTaxonomyData();
const meetupStatusLabels = createLabelMap(taxonomy?.meetupStatuses);

const isPast = date < new Date();
const formattedDate = date.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
const formattedTime = date.toLocaleTimeString('en-US', {
  hour: 'numeric',
  minute: '2-digit',
});

const statusLabel = isPast
  ? meetupStatusLabels.past ?? 'Past Event'
  : meetupStatusLabels.upcoming ?? 'Upcoming';

const maxAttendeesLabel = meetupsDetail?.maxAttendeesLabel.replace('{count}', String(maxAttendees ?? ''));

// Google Maps embed URL
const mapEmbedUrl = coordinates
  ? `https://www.google.com/maps/embed/v1/place?key=YOUR_API_KEY&q=${coordinates.lat},${coordinates.lng}&zoom=15`
  : null;
const mapsUrl = coordinates
  ? `https://www.google.com/maps/search/?api=1&query=${coordinates.lat},${coordinates.lng}`
  : address
    ? `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`
    : null;
---

<Layout title={title} description={description}>
  <article>
    <!-- Header -->
    <section class="bg-gradient-to-br from-primary-600 to-secondary-700 text-white py-12">
      <div class="container-narrow">
        <nav class="mb-6">
          <a href="/meetups" class="text-primary-200 hover:text-white transition-colors inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            {meetupsDetail?.backLabel}
          </a>
        </nav>

        <div class="flex items-start justify-between gap-4 mb-4">
          <h1 class="text-white">{title}</h1>
          {isPast ? (
            <span class="badge bg-white/20 text-white shrink-0">{statusLabel}</span>
          ) : (
            <span class="badge bg-green-500 text-white shrink-0">{statusLabel}</span>
          )}
        </div>

        <p class="text-xl text-primary-100">{description}</p>
      </div>
    </section>

    <!-- Details -->
    <section class="section-sm border-b border-neutral-200">
      <div class="container-narrow">
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Date & Time -->
          <div class="card card-body">
            <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {meetupsDetail?.dateTimeHeading}
            </h3>
            <p class="text-lg font-medium text-neutral-900">{formattedDate}</p>
            <p class="text-neutral-600">{formattedTime}</p>
            {endDate && (
              <p class="text-sm text-neutral-500 mt-1">
                Until {endDate.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' })}
              </p>
            )}
            {recurring && (
              <p class="text-sm text-primary-600 mt-2">
                {meetupsDetail?.recurringLabel} {recurring.frequency}{recurring.day ? ` (${recurring.day})` : ''}
              </p>
            )}
          </div>

          <!-- Location -->
          <div class="card card-body">
            <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {meetupsDetail?.locationHeading}
            </h3>
            <p class="text-lg font-medium text-neutral-900">{location}</p>
            {address && <p class="text-neutral-600">{address}</p>}
            {mapsUrl && (
              <a
                href={mapsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 text-primary-600 hover:text-primary-700 mt-2 text-sm"
              >
                {meetupsDetail?.openMapsLabel}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            )}
          </div>
        </div>

        <!-- RSVP Button -->
        {rsvpLink && !isPast && (
          <div class="mt-8 text-center">
            <a href={rsvpLink} target="_blank" rel="noopener noreferrer" class="btn-primary btn-lg">
              {meetupsDetail?.rsvpLabel}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            {maxAttendees && (
              <p class="text-sm text-neutral-500 mt-2">{maxAttendeesLabel}</p>
            )}
          </div>
        )}
      </div>
    </section>

    <!-- Content -->
    <section class="section-sm">
      <div class="container-narrow prose max-w-none">
        <Content />
      </div>
    </section>

    <!-- Map (if coordinates available) -->
    {coordinates && (
      <section class="section-sm bg-neutral-50">
        <div class="container-narrow">
          <h3 class="text-lg font-semibold mb-4">{meetupsDetail?.mapHeading}</h3>
          <div class="map-container bg-neutral-200 flex items-center justify-center">
            <div class="text-center p-8">
              <p class="text-neutral-500 mb-4">{meetupsDetail?.mapBody}</p>
              <a
                href={mapsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-primary"
              >
                {meetupsDetail?.mapCtaLabel}
              </a>
            </div>
          </div>
        </div>
      </section>
    )}
  </article>
</Layout>
