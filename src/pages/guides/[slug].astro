---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry, render } from 'astro:content';
import { createLabelMap, getTaxonomyData } from '../../utils/taxonomy';

export async function getStaticPaths() {
  const guides = await getCollection('guides');
  return guides.map((guide) => ({
    params: { slug: guide.id },
    props: { guide },
  }));
}

const { guide } = Astro.props;
const { Content } = await render(guide);
const { title, description, difficulty, category, readingTime, prerequisites, lastUpdated, author } = guide.data;
const guidesDetailEntry = await getEntry('global', 'guides-detail');
const guidesDetail = guidesDetailEntry?.data?.type === 'guides-detail' ? guidesDetailEntry.data : undefined;
const taxonomy = await getTaxonomyData();
const guideDifficultyLabels = createLabelMap(taxonomy?.guideDifficulties);
const guideCategoryLabels = createLabelMap(taxonomy?.guideCategories);
const difficultyLabel = guideDifficultyLabels[difficulty] ?? difficulty;
const categoryLabel = guideCategoryLabels[category] ?? category;

const difficultyColors = {
  beginner: 'badge-beginner',
  intermediate: 'badge-intermediate',
  advanced: 'badge-advanced',
};

// Get related guides in the same category
const allGuides = await getCollection('guides');
const relatedGuides = allGuides
  .filter((g) => g.data.category === category && g.id !== guide.id)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);

const reportUrl = guidesDetail?.feedback.reportUrlTemplate.replace('{title}', encodeURIComponent(title));
---

<Layout title={title} description={description}>
  <article>
    <!-- Header -->
    <section class="bg-gradient-to-br from-primary-600 to-secondary-700 text-white py-12">
      <div class="container-narrow">
        <nav class="mb-6">
          <a href="/guides" class="text-primary-200 hover:text-white transition-colors inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            {guidesDetail?.backLabel}
          </a>
        </nav>

        <div class="flex flex-wrap items-center gap-2 mb-4">
          <span class={difficultyColors[difficulty]}>{difficultyLabel}</span>
          <span class="badge bg-white/20 text-white">{categoryLabel}</span>
          {readingTime && (
            <span class="text-sm text-primary-200 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {readingTime} min read
            </span>
          )}
        </div>

        <h1 class="text-white mb-4">{title}</h1>
        <p class="text-xl text-primary-100">{description}</p>

        {(author || lastUpdated) && (
          <div class="mt-6 text-sm text-primary-200 flex flex-wrap gap-4">
            {author && <span>By {author}</span>}
            {lastUpdated && (
              <span>
                Updated {lastUpdated.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </span>
            )}
          </div>
        )}
      </div>
    </section>

    <!-- Prerequisites -->
    {prerequisites.length > 0 && (
      <section class="bg-accent-50 border-b border-accent-200">
        <div class="container-narrow py-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-accent-600 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h4 class="font-medium text-accent-800 mb-1">{guidesDetail?.prerequisitesHeading}</h4>
              <ul class="text-sm text-accent-700">
                {prerequisites.map((prereq) => (
                  <li class="flex items-center gap-2">
                    <span class="w-1.5 h-1.5 bg-accent-400 rounded-full"></span>
                    {prereq}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Content -->
    <section class="section-sm">
      <div class="container-narrow prose max-w-none">
        <Content />
      </div>
    </section>

    <!-- Related Guides -->
    {relatedGuides.length > 0 && (
      <section class="section-sm bg-neutral-50 border-t border-neutral-200">
        <div class="container-narrow">
          <h3 class="text-xl font-semibold mb-6">{guidesDetail?.relatedHeading}</h3>
          <div class="grid gap-4">
            {relatedGuides.map((related) => (
              <a href={`/guides/${related.id}`} class="card card-body flex items-center gap-4 hover:border-primary-300 transition-colors">
                <div class="flex-grow">
                  <h4 class="font-medium text-neutral-900">{related.data.title}</h4>
                  <p class="text-sm text-neutral-500 line-clamp-1">{related.data.description}</p>
                </div>
                <svg class="w-5 h-5 text-neutral-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Feedback -->
    <section class="section-sm border-t border-neutral-200">
      <div class="container-narrow text-center">
        <p class="text-neutral-600 mb-4">{guidesDetail?.feedback.question}</p>
        <div class="flex justify-center gap-4">
          <a href={reportUrl} target="_blank" rel="noopener noreferrer" class="btn-outline btn-sm">
            {guidesDetail?.feedback.reportLabel}
          </a>
          <a href={guidesDetail?.feedback.improveUrl} target="_blank" rel="noopener noreferrer" class="btn-ghost btn-sm">
            {guidesDetail?.feedback.improveLabel}
          </a>
        </div>
      </div>
    </section>
  </article>
</Layout>
