---
import { getEntry } from 'astro:content';
import Modal from '../components/Modal.astro';
import SubmissionForm from '../components/SubmissionForm.astro';
import { nodeFormConfig, guideFormConfig, meetupFormConfig, resourceFormConfig } from '../components/formConfigs';
import '../styles/global.css';
import { resolveLink } from '../utils/siteLinks';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  noIndex?: boolean;
}

const { title, description = 'Charleston Meshtastic Community - Connect with local mesh network enthusiasts', ogImage = '/og-image.png', noIndex = false } = Astro.props;

const navigationEntry = await getEntry('global', 'navigation');
const navigation = navigationEntry?.data?.type === 'navigation' ? navigationEntry.data : undefined;
const siteEntry = await getEntry('global', 'site');
const site = siteEntry?.data?.type === 'site' ? siteEntry.data : undefined;
const footerEntry = await getEntry('global', 'footer');
const footer = footerEntry?.data?.type === 'footer' ? footerEntry.data : undefined;
const navigationLinks = (navigation?.links ?? []) as { label: string; href: string; external?: boolean }[];
const resolveHref = (href: string) => resolveLink(href, site?.links, site?.social);
const footerQuickLinks = (footer?.quickLinks.links ?? []).map((link) => {
  const href = resolveHref(link.href);
  return {
    ...link,
    href,
    external: link.external ?? href.startsWith('http'),
  };
}) as { label: string; href: string; external?: boolean }[];
const footerCommunityLinks = (footer?.community.links ?? []).map((link) => {
  const href = resolveHref(link.href);
  return {
    ...link,
    href,
    external: link.external ?? href.startsWith('http'),
  };
}) as { label: string; href: string; external?: boolean }[];
const footerCopyright = footer?.legal.copyright.replace('{year}', String(new Date().getFullYear()));

const currentPath = Astro.url.pathname;
const fullTitle = title === 'Home' ? 'CHS Mesh - Charleston Meshtastic Community' : `${title} | CHS Mesh`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="CHS Mesh" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Navigation -->
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-neutral-200">
      <nav class="container-wide">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2 text-primary-600 hover:text-primary-700">
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="2" />
              <path d="M16.24 7.76a6 6 0 0 1 0 8.49m-8.48-.01a6 6 0 0 1 0-8.49m11.31-2.82a10 10 0 0 1 0 14.14m-14.14 0a10 10 0 0 1 0-14.14" />
            </svg>
            <span class="font-bold text-xl">CHS Mesh</span>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-1">
            {navigationLinks.map((link: (typeof navigationLinks)[number]) => (
              <a
                href={link.href}
                class:list={[
                  'nav-link',
                  { 'nav-link-active': currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) },
                ]}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3 ml-1 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            ))}
          </div>

          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg text-neutral-600 hover:bg-neutral-100" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col gap-1">
            {navigationLinks.map((link: (typeof navigationLinks)[number]) => (
              <a
                href={link.href}
                class:list={[
                  'nav-link',
                  { 'nav-link-active': currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) },
                ]}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-neutral-800 text-neutral-300 py-12">
      <div class="container-wide">
        <div class="grid md:grid-cols-4 gap-8">
          <!-- About -->
          <div class="md:col-span-2">
            <div class="flex items-center gap-2 text-white mb-4">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="2" />
                <path d="M16.24 7.76a6 6 0 0 1 0 8.49m-8.48-.01a6 6 0 0 1 0-8.49m11.31-2.82a10 10 0 0 1 0 14.14m-14.14 0a10 10 0 0 1 0-14.14" />
              </svg>
              <span class="font-bold text-lg">{footer?.about.title ?? footer?.brandName ?? 'CHS Mesh'}</span>
            </div>
            <p class="text-sm leading-relaxed">
              {footer?.about.body}
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="font-semibold mb-4" style="color: white;">{footer?.quickLinks.heading}</h4>
            <ul class="space-y-2 text-sm">
              {footerQuickLinks.map((link) => (
                <li>
                  <a href={link.href} class="hover:text-white transition-colors" target={link.external ? '_blank' : undefined} rel={link.external ? 'noopener noreferrer' : undefined}>
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Community -->
          <div>
            <h4 class="font-semibold mb-4" style="color: white;">{footer?.community.heading}</h4>
            <ul class="space-y-2 text-sm">
              {footerCommunityLinks.map((link) => (
                <li>
                  <a href={link.href} target={link.external ? '_blank' : undefined} rel={link.external ? 'noopener noreferrer' : undefined} class="hover:text-white transition-colors">
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="border-t border-neutral-700 mt-8 pt-8 text-sm text-center">
          <p>{footerCopyright}</p>
          <p class="mt-2 text-neutral-400">{footer?.legal.trademark}</p>
        </div>
      </div>
    </footer>

    <!-- Submission Modals -->
    <Modal id="node-modal" size="lg">
      <SubmissionForm config={nodeFormConfig} />
    </Modal>

    <Modal id="guide-modal" size="xl">
      <SubmissionForm config={guideFormConfig} />
    </Modal>

    <Modal id="meetup-modal" size="xl">
      <SubmissionForm config={meetupFormConfig} />
    </Modal>

    <Modal id="resource-modal" size="xl">
      <SubmissionForm config={resourceFormConfig} />
    </Modal>

    <!-- Mobile menu toggle script -->
    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
